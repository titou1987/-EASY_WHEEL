<div class="banner shadow-lg" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1607623618478-384d71c091d0?q=80&w=2832&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
<div class="container">
  <h1><strong>Easy Wheel</strong>!</h1>
  <p>Find the best of bikes <strong>around you.</strong></p>
</div>
</div>

<div class="container my-4">
<div class="d-flex justify-content-evenly mb-3">
  <div class="btn-group mr-2">
    <button type="button" class="btn btn-warning dropdown-toggle">
      Type
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">Cargo</a>
      <a class="dropdown-item" href="#">Tandem</a>
      <a class="dropdown-item" href="#">Trailer</a>
      <a class="dropdown-item" href="#">Long Tail</a>
    </div>
  </div>

  <div class="btn-group mr-2">
    <button type="button" class="btn btn-warning dropdown-toggle">
      Prix
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">0 - 20€</a>
      <a class="dropdown-item" href="#">20 - 40€</a>
      <a class="dropdown-item" href="#">40 - 60€</a>
      <a class="dropdown-item" href="#">60€ et plus</a>
    </div>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-warning dropdown-toggle">
      Département
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">Paris</a>
      <a class="dropdown-item" href="#">Lyon</a>
      <a class="dropdown-item" href="#">Marseille</a>
      <a class="dropdown-item" href="#">Toulouse</a>
    </div>
  </div>
</div>
</div>

<div class="d-flex flex-column ">
  <% @bikes.each do |bike| %>
    <div class="card-product mx-auto">
      <img src="<%= cl_image_path bike.photo.key %>" alt="<%= bike.bike_name %>"/>
      <div class="card-product-infos">
        <h2><%= bike.bike_name %></h2>
        <h3><%= bike.price %></h3>
        <p><%= bike.description %></p>
      </div>
    </div>
  <% end %>
</div>
