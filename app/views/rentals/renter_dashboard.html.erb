<div class="container column m-3 p-5 border mx-auto rounded-5">
    <div class="row"></div>
    <h2>Bikes I have booked!</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Bike</th>
          <th scope="col">Start date</th>
          <th scope="col">End date</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @rentals.each_with_index do |e,i| %>
          <tr>
            <th  class="pt-5" scope="row"><%= i + 1 %></th>
            <td><img class= "image-dash img-fluid detail_img rounded-1 object-fit-cover object-position-center" src="<%= cl_image_path e.bike.photo.key %>"/></td>
            <td class="pt-5"><%= e.start_date %></td>
            <td class="pt-5"><%= e.end_date %></td>
            <td class="pt-5"><%= e.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
